{
  "name": "@elonehoo/haul",
  "version": "0.0.8",
  "description": "convenient and modern wrapper around fetch with smart extensible defaults",
  "keywords": [
    "fetch"
  ],
  "license": "MIT",
  "author": "Elone Hoo <huchengyea@163.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elonehoo/haul"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    },
    "./*": "./*"
  },
  "files": [
    "dist",
    "*.d.ts"
  ],
  "homepage": "https://github.com/elonehoo/haul#readme",
  "bugs": "https://github.com/elonehoo/haul/issues",
  "scripts": {
    "docs:dev": "pnpm -C docs run dev",
    "build": "rimraf dist && unbuild",
    "prepublishOnly": "pnpm run build",
    "release": "bumpp package.json core/package.json --commit --push --tag && pnpm -r publish --access public",
    "typeCheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:ui": "vitest --ui --open false",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@elonehoo/eslint-config": "2.0.0",
    "@types/node": "22.13.9",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.9",
    "bumpp": "9.11.1",
    "eslint": "9.21.0",
    "pnpm": "9.15.6",
    "rimraf": "6.0.1",
    "typescript": "5.8.2",
    "unbuild": "^3.5.0",
    "vite": "6.2.0",
    "vitest": "2.1.9",
    "vitest-fetch-mock": "^0.4.5"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@algolia/client-search"
      ]
    }
  }
}
